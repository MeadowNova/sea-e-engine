  "blend_modes": {
    "normal": {
      "description": "Standard overlay, no blending",
      "best_for": ["posters", "stickers", "solid backgrounds"]
    },
    "multiply": {
      "description": "Darkens colors, good for fabric integration",
      "best_for": ["light colored fabrics", "realistic fabric look"]
    },
    "screen": {
      "description": "Lightens colors, good for dark backgrounds",
      "best_for": ["dark colored fabrics", "light designs on dark"]
    },
    "overlay": {
      "description": "Combines multiply and screen",
      "best_for": ["textured fabrics", "vintage effects"]
    }
  },
  
  "positioning_guides": {
    "tshirt_chest_center": {
      "description": "Standard chest placement for t-shirts",
      "coordinates": [700, 650],
